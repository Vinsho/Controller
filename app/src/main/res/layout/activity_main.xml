<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2D2E"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pause"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:drawable/ic_media_pause"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/next"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:drawable/ic_media_next"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/forward"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:drawable/ic_media_ff"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <Button
        android:id="@+id/backward"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:drawable/ic_media_rew"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <Button
        android:id="@+id/prev"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:drawable/ic_media_previous"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/fullscreen"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/full"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <Button
        android:id="@+id/tSwitch"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:background="#006064"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:text="T-Switch"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="73dp"
        android:layout_height="51dp"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/volumeUp"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toEndOf="@+id/volumeDown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/volumeUp"
        style="@android:style/Widget.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="#006064"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:text="@string/plus"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838"
        tools:text="+" />

    <Button
        android:id="@+id/volumeDown"
        style="@android:style/Widget.Button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="#006064"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:text="@string/minus"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838"
        tools:text="-" />

    <Button
        android:id="@+id/wSwitch"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:background="#006064"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:text="W-Switch"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <Button
        android:id="@+id/enter"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:background="#006064"
        android:fontFamily="sans-serif"
        android:onClick="sendMessage"
        android:text="Enter"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video controls"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163" />

    <ImageView
        android:id="@+id/shutdown"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:onClick="areYouSure"
        android:src="@drawable/shut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>